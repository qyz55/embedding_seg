{
    "train_input_config": {
        "dataset_name": "test_black",
        "data_dir": "../experiments/data/test",
        "data_list": "../experiments/data/imageset/train.txt",
        "num_reader": 1,
        "ignore_label": 255,
        "input_size": [161, 161]
    },

    "train_config": {
        "batch_size": 1,
        "optimizer_config": {
            "type": "SGD",
            "num_steps": 90,
            "grad_clip_by_value": 0.0,
            "learning_rate": {
                "base_lr": 0,
                "decay_steps": [],
                "decay_rate": 0.1
            },
            "momentum": 0.9,
            "use_nesterov": false
        },
        "augment_config": {
            "random_scale": false,
            "random_crop": false,
            "random_mirror": false
        },
        "restore_from": "../experiments/checkpoints/seg/model.ckpt-25000",
        "not_restore_last": false,
        "from_embedding_checkpoint": true,
        "loss_config": {
            "dense_siamese_loss": {
                "use": false
            },
            "pixel_neighbor_binary_loss": {
                "use": false
            },
            "semantic_seg_loss": {
                "use": false
            },
            "k_points_cls_loss":{
                "use": true,
                "weight": 0.2,
                "points_k": 7,
                "max_instance": 40
            },
            "weight_decay": 5e-4
        }
    },

    "model_config": {
        "model_name": "resnet101",
        "is_training": false,
        "fusion_layers": ["input", "resnet_v1_101/block1", "resnet_v1_101/block2", "resnet_v1_101/block3"],
        "embedding_depth": 64,
        "seg_branch": {
            "use": false,
            "output_stride": 8,
            "inst_num_classes": -1,
            "cls_num_classes": -1
        }
    }
}
